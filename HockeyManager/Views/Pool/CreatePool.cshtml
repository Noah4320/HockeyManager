@model HockeyManager.Models.Pool
@inject HockeyManager.Data.HockeyContext _context

<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    $(document).ready(function () {
        $(".ruleset").click(function () {
            var radioValue = $("input[id='rules']:checked").val();
            $.ajax({
                type: "POST",
                url: "https://localhost:44375/Pool/GetRule",
                traditional: true,
                data: {
                    id: radioValue
                },
                success: function (data, textStatus, jqXHR) {
                    document.getElementById('rule').innerHTML = data;
                    //data - response from server
                },
                error: function (jqXHR, textStatus, errorThrown) {
                }
            });
        });
    });
</script>

<div class="container">
    <h4>Pool</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="CreatePool">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @foreach (var rule in _context.RuleSets.ToList())
                    {
                        <input type="radio" asp-for="RuleSetId" class="ruleset" id="rules" value=@rule.Id>
                        <label for="rule">@rule.Name</label><br>
                    }
                    <span asp-validation-for="RuleSetId" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Private" /> @Html.DisplayNameFor(model => model.Private)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Size" class="control-label"></label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <div class="text-center">
            <p id="rule"></p>
            </div>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
