@model HockeyManager.Models.Pool

<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
    $(document).ready(function () {
       
        $(document).on('click', '.playerData', function () {
            var test = (this.id);
            $.ajax({
                type: "GET",
                url: "https://localhost:44375/Pool/GetTeamRoster",
                data: {
                    id: test
                }
            }).done(function (roster) {
                var result = "";
                var players = JSON.parse(roster);

                $.each(players, function (id, player) {

                    result += '<tr> <td>' + player.PlayerInfo.Position + '</td>' +

                        '<td>' + player.PlayerInfo.Name + '</td>' +

                        '<td>' + player.Team.TeamInfo.Name + '</td>' +

                        '<td>' + player.Goals + '</td>' +

                        '<td>' + player.Assists + '</td>' +

                        '<td>' + player.Points + '</td> </tr>';
                });
                $("#refTable").html(result);
             })

            .fail(function (x) {
                alert(x.responseText);

            });
        });    
    });

</script>
<div class="container">
    <div class="text-center">
        <h2>@Model.Name</h2>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <h3>Pool Teams</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Rank</th>
                        <th scope="col">Username</th>
                        <th scope="col">Points</th>
                        <th scope="col">Team</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int counter = 1;}
                    @foreach (var team in Model.Teams)
                    {
                    <tr class="playerData" id=@team.Id>
                        <td>@counter</td>
                        <td>@team.User.UserName</td>
                        <td>@team.Points</td>
                        <td>@team.TeamInfo.Name</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-6">
            <h3>Roster</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Position</th>
                        <th scope="col">Name</th>
                        <th scope="col">Team Name</th>
                        <th scope="col">Goals</th>
                        <th scope="col">Assists</th>
                        <th scope="col">Points</th>
                    </tr>
                </thead>
                <tbody id="refTable">
                
                </tbody>
            </table>
        </div>
    </div>
            <input type="button" value="Add or Update Team" onclick="location.href='@Url.Action("ManagePoolTeam", "Pool")?id=' + @Model.Id" />
        </div>
