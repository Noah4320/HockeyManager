@model HockeyManager.ViewModel.SearchPlayer

<div class="container">
    <form method="post" action="FilterPlayers">

        Name
        <input type="text" id="fname_id" name="fname" />
        <div class="row">
            <div class="col-12">
                @foreach (var item in Model.Teams)
                {
                    <label class="checkbox-inline">
                        @Html.CheckBox(item.Name, false) @item.Name
                    </label>

                }

            </div>
        </div>
            <div class="form-group">
                <label for="Position">Position</label>
                <select class="form-control" name="Position" id="Position">
                    <option value="All"></option>
                    <option value="C">Center</option>
                    <option value="LW">Left Wing</option>
                    <option value="RW">Right Wing</option>
                    <option value="D">Defenceman</option>
                    <option value="G">Goalie</option>
                </select>
            </div>

            <div class="form-group">
                <label for="Favourite">Favourite</label>
                <select class="form-control" name="Favourite" id="Favourite">
                    <option value="No">No</option>
                    <option value="Yes">Yes</option>
                </select>
            </div>

            <input type="submit" />
</form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Picture
            </th>
            <th>
                Name
            </th>
            <th>
                Position
            </th>
            <th>
                Country
            </th>
            <th>
                Goals
            </th>
            <th>
                Assists
            </th>
            <th>
                Points
            </th>
            <th>
                Rank
            </th>
            <th>
                Birth Date
            </th>
            <th>
                PlusMinus
            </th>
            <th>
                Height
            </th>
            <th>
                Weight
            </th>
            <th>
                PenalityMinutes
            </th>
            <th>
                Saves
            </th>
            <th>
                Shutouts
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Players)
            {
            <tr>
                <td>
                    <img src=@Html.DisplayFor(modelItem => item.HeadShotUrl) alt="Headshot" width="100" height="100">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Goals)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assists)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Points)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PlusMinus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PenalityMinutes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saves)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shutouts)
                </td>
            </tr>
        }
    </tbody>
</table>
