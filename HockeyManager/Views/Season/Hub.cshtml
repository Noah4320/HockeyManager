@model HockeyManager.ViewModel.SeasonsViewModel

<div class="text-center">
    <div class="row">
        <div class="col">
            <h3>Standings</h3>

            <select class="form-control">
                <option value="League">League</option>
                <option value="Division">Division</option>
                <option value="Conference">Conference</option>
            </select>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Place</th>
                        <th>Team</th>
                        <th>W</th>
                        <th>L</th>
                        <th>OTL</th>
                        <th>P</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model.Teams)
                    {
                        <tr>
                            <td>@team.Place</td>
                            <td>@team.TeamInfo.Name</td>
                            <td>@team.Wins</td>
                            <td>@team.Loses</td>
                            <td>@team.OvertimeLoses</td>
                            <td>@team.Points</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col">
            <h3>Schedule</h3>

            <button onclick="location.href='@Url.Action("SimGame", "Season")'")>VS @Model.MyTeam.HomeSchedule.First().AwayTeam.TeamInfo.Name</button>
        </div>
        <div class="col">
            <h3>My Roster</h3>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Name</th>
                        <th>G</th>
                        <th>A</th>
                        <th>OVR</th>
                        <th>+/-</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var team in Model.Teams)
                    {
                        if (team.UserId != null)
                        {
                            foreach (var player in team.Players)
                            {
                                <tr>
                                    <td>@player.Position</td>
                                    <td>@player.PlayerInfo.Name</td>
                                    <td>@player.Goals</td>
                                    <td>@player.Assists</td>
                                    <td>@player.Overall</td>
                                    <td>@player.PlusMinus</td>
                                </tr>
                             }
                        }
                     }
                    </tbody>
                </table>
        </div>
    </div>
</div>