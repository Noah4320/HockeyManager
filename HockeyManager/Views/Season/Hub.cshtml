<div class="text-center">
    <div class="row">
        <div class="col">
            <h3>Standings</h3>

            <select class="form-control">
                <option value="League">League</option>
                <option value="Division">Division</option>
                <option value="Conference">Conference</option>
            </select>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Place</th>
                        <th>Team</th>
                        <th>W</th>
                        <th>L</th>
                        <th>OTL</th>
                        <th>P</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
        <div class="col">
            <h3>Schedule</h3>

            <button onclick="location.href='@Url.Action("SimGame", "Season")'")>VS Montreal Canadiens</button>
        </div>
        <div class="col">
            <h3>My Roster</h3>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Position</th>
                        <th>Name</th>
                        <th>G</th>
                        <th>A</th>
                        <th>Rank</th>
                        <th>+/-</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>